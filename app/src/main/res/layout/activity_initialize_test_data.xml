<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/terciario">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicializar Datos de Prueba"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/fredoka_one"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presiona el botÃ³n para crear 10 contactos y 20 viviendas"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/fredoka_one"
        android:textAlignment="center"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnInitialize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Datos de Prueba"
        android:backgroundTint="@color/acentuado"
        android:textColor="@color/black"
        android:fontFamily="@font/fredoka_one" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp" />

</LinearLayout>